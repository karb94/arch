[Unit]
Description=First boot configuration script
Requires=Network.target
After=Network.target network-online.target

[Service]
Type=oneshot
ExecStart=/bin/sh -c "/usr/bin/bash <(curl https://raw.githubusercontent.com/karb94/arch/master/first_boot.sh)"
ExecStartPost=/bin/sh -c "systemctl disable first-boot.service; rm /etc/systemd/system/first-boot.service"
StandardOutput=journal

[Install]
WantedBy=multi-user.target
